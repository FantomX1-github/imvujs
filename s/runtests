#!/bin/bash

function fail() {
    echo "Failed"
    exit 1
}

HERE=`dirname "$0"`

if [ "$@" ]; then
    TESTS="$@"
else
    TESTS=`find $HERE/.. -iname '*.test.js'`
fi

"$HERE"/../bin/test $TESTS || fail

echo "Now testing failures..."
# Now test failures!

EXPECTED_FAILS=`find $HERE/.. -iname '*.fail.js'`
for expected in $EXPECTED_FAILS; do
    echo $expected ...
    "$HERE"/../bin/test $expected > /dev/null
    if [ "$?" = 0 ]; then
        echo "$expected passed incorrectly"
        exit 1
    fi
done

echo
echo "Success!"
exit 0

